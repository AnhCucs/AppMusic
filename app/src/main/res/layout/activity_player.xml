<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#C63469"
    tools:context=".Player">

    <ImageView
        android:layout_marginTop="@dimen/_25sdp"
        android:id="@+id/musici"
        android:layout_width="@dimen/_310sdp"
        android:layout_gravity="center"
        android:layout_height="@dimen/_190sdp"
        android:src="@drawable/icn_music"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Song Title"
        android:id="@+id/songTitle"
        android:textSize="@dimen/_20sdp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_35sdp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_50sdp"
        android:orientation="horizontal">
        <TextView
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.00"
            android:textSize="@dimen/_10sdp"
            android:id="@+id/startTime"/>
        <SeekBar
            android:layout_width="@dimen/_250sdp"
            android:layout_height="wrap_content"
            android:progress="50"
            android:id="@+id/seekBar"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5.00"
            android:textSize="@dimen/_10sdp"
            android:id="@+id/totalTime"/>
    </LinearLayout>




    <LinearLayout
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:id="@+id/prevBtn"
            android:src="@drawable/pre_btn"/>

        <ImageView
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:id="@+id/playBtn"
            android:layout_marginLeft="@dimen/_65sdp"
            android:src="@drawable/play_icon"/>
        <ImageView
            android:layout_marginLeft="@dimen/_59sdp"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:id="@+id/nextBtn"
            android:rotation="180"
            android:src="@drawable/pre_btn"/>
    </LinearLayout>
</LinearLayout>